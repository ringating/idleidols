<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="250dp"
    android:padding="10dp"
    android:background="@drawable/idolcard_border"
    android:layout_gravity="center">

    <HorizontalScrollView
        android:id="@+id/workCardScrollView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:id="@+id/idolImageContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <TextView
        android:id="@+id/academyCardName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/exitButton"
        android:text="Facility Name"
        android:textColor="@color/darkGray"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/academyCardLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/academyCardName"
        android:layout_marginTop="5dp"
        android:textColor="@color/darkGray"
        android:textSize="20dp"
        android:text="Level: " />

    <TextView
        android:id="@+id/academyCardLevelContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/academyCardName"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/academyCardLevel"
        android:textSize="20dp"
        android:text="0"
        android:textColor="@color/darkGray" />

    <Button
        android:id="@+id/academyUpgradeButton"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_below="@+id/academyCardName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_rectangle"
        android:text="Upgrade"
        android:textColor="@color/darkGray"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/academyUpgradeCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/academyUpgradeButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="210dp"
        android:text="Cost: $"
        android:textColor="@color/darkGray"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/academyUpgradeCostContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/academyUpgradeButton"
        android:layout_toEndOf="@+id/academyUpgradeCost"
        android:text="0"
        android:textColor="@color/darkGray"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/academyCardDance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/academyCardLevel"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:text="Dance: "
        android:textColor="@color/darkGray" />

    <TextView
        android:id="@+id/academyCardDanceContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/academyCardDance"
        android:layout_below="@+id/academyCardLevel"
        android:layout_marginTop="5dp"
        android:text="0"
        android:textSize="15dp"
        android:textColor="@color/darkGray" />

    <TextView
        android:id="@+id/academyCardSing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/academyCardDance"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:text="Sing: "
        android:textColor="@color/darkGray" />

    <TextView
        android:id="@+id/academyCardSingContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/academyCardDance"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/academyCardSing"
        android:textSize="15dp"
        android:text="0"
        android:textColor="@color/darkGray" />

    <TextView
        android:id="@+id/academyCardCharm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/academyCardDance"
        android:layout_alignParentStart="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="5dp"
        android:text="Charm: "
        android:textColor="@color/darkGray"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/academyCardCharmContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/academyCardDance"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/academyCardCharm"
        android:text="0"
        android:textColor="@color/darkGray"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/exitButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="X"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:padding="5dp"
        android:background="@drawable/circlebackground"
        />

</RelativeLayout>