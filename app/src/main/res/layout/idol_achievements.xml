<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Achievements">

    <fragment
        android:id="@+id/header"
        android:name="com.example.myapplication.HeaderFragment"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/header_fragment" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/home_button4">
        <LinearLayout
            android:id="@+id/achievements_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </ScrollView>

    <Button
        android:id="@+id/home_button4"
        android:layout_width="68dp"
        android:layout_height="47dp"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/academies_button4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/academies_button4"
        android:layout_width="68dp"
        android:layout_height="47dp"
        android:text="Academies"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/workplace_button4"
        app:layout_constraintStart_toEndOf="@+id/home_button4" />

    <Button
        android:id="@+id/workplace_button4"
        android:layout_width="68dp"
        android:layout_height="47dp"
        android:text="Workplace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/scout_button4"
        app:layout_constraintStart_toEndOf="@+id/academies_button4" />

    <Button
        android:id="@+id/scout_button4"
        android:layout_width="68dp"
        android:layout_height="47dp"
        android:text="Scout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/management_button4"
        app:layout_constraintStart_toEndOf="@+id/workplace_button4" />

    <Button
        android:id="@+id/management_button4"
        android:layout_width="68dp"
        android:layout_height="47dp"
        android:text="Management"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/achievements_button4"
        app:layout_constraintStart_toEndOf="@+id/scout_button4" />

    <Button
        android:id="@+id/achievements_button4"
        android:layout_width="68dp"
        android:layout_height="47dp"
        android:text="Achievements"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/management_button4" />

</androidx.constraintlayout.widget.ConstraintLayout>