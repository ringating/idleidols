<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:padding="5dp"
    android:background="@drawable/idolcard_border"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/idolSlot1"
        android:layout_width="67dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="62dp"
        android:background="@drawable/no_idol" />

    <ImageView
        android:id="@+id/idolSlot2"
        android:layout_width="67dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="93dp"
        android:layout_marginLeft="93dp"
        android:layout_marginTop="62dp"
        android:background="@drawable/no_idol"/>

    <ImageView
        android:id="@+id/idolSlot3"
        android:layout_width="67dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="178dp"
        android:layout_marginLeft="178dp"
        android:layout_marginTop="62dp"
        android:background="@drawable/no_idol" />

    <ImageView
        android:id="@+id/idolSlot4"
        android:layout_width="67dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="258dp"
        android:layout_marginLeft="258dp"
        android:layout_marginTop="62dp"
        android:background="@drawable/no_idol" />

    <TextView
        android:id="@+id/name"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-246dp"
        android:layout_marginLeft="-246dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/idolImage"
        android:layout_toRightOf="@+id/idolImage"
        android:text="Facility Name" />

    <TextView
        android:id="@+id/exitButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="X"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:padding="5dp"
        android:background="@drawable/circlebackground"
        />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-279dp"
        android:layout_marginLeft="-279dp"
        android:layout_marginTop="164dp"
        android:layout_toEndOf="@+id/idolImage"
        android:layout_toRightOf="@+id/idolImage"
        android:text="Progress" />

</RelativeLayout>