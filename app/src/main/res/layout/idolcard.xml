<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="200dp"
    android:padding="5dp"
    android:background="@drawable/idolcard_border"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/idolImage"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/idolImage"
        android:layout_toRightOf="@+id/idolImage"
        android:text="Name" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/idolImage"
        android:layout_toRightOf="@+id/idolImage"
        android:text="Rarity: " />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/idolImage"
        android:layout_toRightOf="@+id/idolImage"
        android:text="Stats:" />

    <TextView
        android:id="@+id/exitButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="X"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:padding="5dp"
        android:background="@drawable/circlebackground"
        />

    <TextView
        android:id="@+id/rarity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="54dp"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:text="0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/idolImage"
        android:layout_toRightOf="@+id/idolImage"
        android:text="Dance:" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/idolImage"
        android:layout_toRightOf="@+id/idolImage"
        android:text="Sing:" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/idolImage"
        android:layout_toRightOf="@+id/idolImage"
        android:text="Charm:" />

    <TextView
        android:id="@+id/dance"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/idolImage"
        android:layout_toRightOf="@+id/idolImage"
        android:text="0" />

    <TextView
        android:id="@+id/sing"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/idolImage"
        android:layout_toRightOf="@+id/idolImage"
        android:text="0" />

    <TextView
        android:id="@+id/charm"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/idolImage"
        android:layout_toRightOf="@+id/idolImage"
        android:text="0" />

    <TextView
        android:id="@+id/mergeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/rarity"
        android:text="Merge:" />
    <TextView
        android:id="@+id/merge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/mergeText"
        android:text="0"/>
</RelativeLayout>